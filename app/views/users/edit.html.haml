- provide(:title, 'Edit user')
%h1 Update your profile
.row
  .span6.offset3
    = simple_form_for(@user, html: {class: 'form-horizontal sign_form' }) do |f|
      = render 'shared/error_messages'
      = f.input :name
      = f.input :email
      = f.input :password
      = f.input :password_confirmation, label: "Confirm Password"
      .btn_f
        =  f.button :submit,  "Save changes", class: "btn btn-large btn-primary fr"
    = gravatar_for @user
    %a{href: "http://gravatar.com/emails"} change